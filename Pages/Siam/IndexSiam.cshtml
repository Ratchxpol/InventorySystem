@page
@model InventorySystem.Pages.Siam.IndexSiamModel
@{
}

<a class="bin btn-primary btn-sm" href="/Siam/CreateSiam">New Item</a>
<table class="table">
	<thead>
		<tr>
			<th>Item ID</th>
			<th>Item</th>
			<th>Store ID</th>
			<th>Supplier</th>
			<th>Amount</th>
			<th>Created At</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listStocks)
		{
			<tr>
				<td>@item.itemid</td>
				<td>@item.item</td>
				<td>@item.storeid</td>
				<td>@item.supplier</td>
				<td>@item.amount</td>
				<td>@item.create_at</td>
				<td>
					<a class="bin btn-primary btn-sm" href="/Siam/EditSiam?itemid=@item.itemid">Edit</a>
					<a class="bin btn-danger btn-sm" href="/Siam/DeleteSiam?itemid=@item.itemid">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>